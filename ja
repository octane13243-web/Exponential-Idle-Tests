import { ExponentialCost, FirstFreeCost, CustomCost } from "./api/Costs";
import { Localization } from "./api/Localization";
import { parseBigNumber, BigNumber } from "./api/BigNumber";
import { theory } from "./api/Theory";
import { Utils } from "./api/Utils";

var id = "my_theory";
var name = "My Custom Theory";
var description = "A custom theory for Exponential Idle.";
var authors = "Your Name";
var version = 1;
var releaseOrder = "1";

requiresGameVersion("1.4.33");

var tauMultiplier = 1;

// Currency
var currency;

// Variables
var δ;
var σ;
var n;

// Milestones
var milestone0;

// Internal state


var init = () => {
    currency = theory.createCurrency();

    ///////////////////
    // Regular Upgrades
    // δ
    {
        let getDesc = (level) => "δ=${getΔ(level)}";
        let getInfo = (level) => "δ=${getΔ(level)}";
        δ = theory.createUpgrade(0, currency, new FirstFreeCost(new ExponentialCost(10, 2)));
        δ.getDescription = (amount) => Utils.getMath(getDesc(δ.level));
        δ.getInfo = (amount) => Utils.getMathTo(getInfo(δ.level), getInfo(δ.level + amount));
    }

    // σ
    {
        let getDesc = (level) => "σ=${getΣ(level)}";
        let getInfo = (level) => "σ=${getΣ(level)}";
        σ = theory.createUpgrade(1, currency, new ExponentialCost(10, 2));
        σ.getDescription = (amount) => Utils.getMath(getDesc(σ.level));
        σ.getInfo = (amount) => Utils.getMathTo(getInfo(σ.level), getInfo(σ.level + amount));
    }

    // n
    {
        let getDesc = (level) => "n=${getN(level)}";
        let getInfo = (level) => "n=${getN(level)}";
        n = theory.createUpgrade(2, currency, new ExponentialCost(10000, 2));
        n.getDescription = (amount) => Utils.getMath(getDesc(n.level));
        n.getInfo = (amount) => Utils.getMathTo(getInfo(n.level), getInfo(n.level + amount));
    }

    /////////////////////
    // Permanent Upgrades
    theory.createPublicationUpgrade(0, currency, 1e8);
    theory.createBuyAllUpgrade(1, currency, 1e15);
    theory.createAutoBuyerUpgrade(2, currency, 1e25);

    /////////////////////
    // Milestone Upgrades
    theory.setMilestoneCost(new CustomCost(lvl => BigNumber.from(1 + lvl)));
    {
        milestone0 = theory.createMilestoneUpgrade(0, 1);
        milestone0.description = "Raise δ exponent by .15";
        milestone0.info = "Raise δ exponent by .15";
    }

    updateAvailability();
}

var tick = (elapsedTime, multiplier) => {
    let dt = BigNumber.from(elapsedTime * multiplier);
    let bonus = theory.publicationMultiplier;
    
    let vδ = getΔ(δ.level);
    let vσ = getΣ(σ.level);
    let vn = getN(n.level);
    
    // Main equation: ρ = bonus * dt * [variables multiplied together]
    currency.value += bonus * dt * vδ * vσ * vn;
    
    theory.invalidateTertiaryEquation();
}

var updateAvailability = () => {

}

var getInternalState = () => {
    return "";
}

var setInternalState = (state) => {
    // Restore internal state
}

var postPublish = () => {
    // Reset values after publish
}

var getPrimaryEquation = () => {
    return "\dot{\rho} = \sum_{k=1}^{n}\sigma\delta/k";
}

var getSecondaryEquation = () => {
    let result = theory.latexSymbol + "=\\max\\rho";
    return result;
}

var getTertiaryEquation = () => {
    return "";
}

var getPublicationMultiplier = (tau) => tau.isZero ? BigNumber.ONE : tau.pow(0.15);
var getPublicationMultiplierFormula = (symbol) => "{symbol}^{0.15}";
var getTau = () => currency.value.pow(1);
var get2DGraphValue = () => currency.value.sign * (BigNumber.ONE + currency.value.abs()).log10().toNumber();

// Variable getters
var getΔ = (level) => Utils.getStepwisePowerSum(level, 2, 10, 0);
var getΣ = (level) => BigNumber.from(2).pow(BigNumber.from(level));
var getN = (level) => BigNumber.from(level * 10);



init();
