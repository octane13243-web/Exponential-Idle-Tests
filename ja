import { ExponentialCost, FirstFreeCost, CustomCost } from "./api/Costs";
import { Localization } from "./api/Localization";
import { parseBigNumber, BigNumber } from "./api/BigNumber";
import { theory } from "./api/Theory";
import { Utils } from "./api/Utils";

var id = "my_theory";
var name = "Logs (fixed)";
var description = "A custom theory for Exponential Idle.";
var authors = "Horchata";
var version = 1;
var releaseOrder = "1";

requiresGameVersion("1.4.33");

var tauMultiplier = 1;

// Currency
var currency;

// Variables
var c;
var q;

// Milestones
var milestone0;

// Internal state


var init = () => {
    currency = theory.createCurrency();

    ///////////////////
    // Regular Upgrades
    // c
    {
        let getDesc = (level) => "c=${getC(level)}";
        let getInfo = (level) => "c=${getC(level)}";
        c = theory.createUpgrade(0, currency, new FirstFreeCost(new ExponentialCost(10, 2)));
        c.getDescription = (amount) => Utils.getMath(getDesc(c.level));
        c.getInfo = (amount) => Utils.getMathTo(getInfo(c.level), getInfo(c.level + amount));
    }

    // q
    {
        let getDesc = (level) => "q=${getQ(level)}";
        let getInfo = (level) => "q=${getQ(level)}";
        q = theory.createUpgrade(1, currency, new ExponentialCost(10, 2));
        q.getDescription = (amount) => Utils.getMath(getDesc(q.level));
        q.getInfo = (amount) => Utils.getMathTo(getInfo(q.level), getInfo(q.level + amount));
    }

    /////////////////////
    // Permanent Upgrades
    theory.createPublicationUpgrade(0, currency, 1);
    theory.createBuyAllUpgrade(1, currency, 1e15);
    theory.createAutoBuyerUpgrade(2, currency, 1e25);

    /////////////////////
    // Milestone Upgrades
    theory.setMilestoneCost(new CustomCost(lvl => {
        const costs = [10];
        return BigNumber.from(costs[Math.min(lvl, costs.length - 1)]);
    }));
    {
        milestone0 = theory.createMilestoneUpgrade(0, 1);
        milestone0.description = "Raise the c exponent";
        milestone0.info = "Raise the c exponent";
        milestone0.boughtOrRefunded = (_) => { theory.invalidatePrimaryEquation(); theory.invalidateSecondaryEquation(); theory.invalidateTertiaryEquation(); updateAvailability(); }
    }

    updateAvailability();
}

var tick = (elapsedTime, multiplier) => {
    let dt = BigNumber.from(elapsedTime * multiplier);
    let bonus = theory.publicationMultiplier;
    
    // Calculate variable values with milestone exponent bonuses
    let vc = getC(c.level).pow(1 + (milestone0.level * 2));
    let vq = getQ(q.level);
    
    // Calculate milestone multipliers

    
    // Main equation: Ï = bonus * dt * [variables multiplied together]
    currency.value += bonus * dt * vc * vq;
    
    theory.invalidateTertiaryEquation();
}

var updateAvailability = () => {

}

var getInternalState = () => {
    return "";
}

var setInternalState = (state) => {
    // Restore internal state
}

var postPublish = () => {
    // Reset values after publish
}

var getPrimaryEquation = () => {
    let result = "\dot{\rho} = \frac{q \log(c)}{2}";
    
    // Dynamically update equation with milestone exponents
    if (milestone0.level > 0) {
        const exponent = 1 + milestone0.level * 2;
        result = result.replace(new RegExp('c(?![_a-zA-Z0-9])', 'g'), 'c^{' + exponent.toFixed(2) + '}');
    }
    
    return result;
}

var getSecondaryEquation = () => {
    let result = "\tau = \max\rho^{0.5}";
    return result;
}

var getTertiaryEquation = () => {
    let result = "";
    
    // Show current values and milestone status
    result += "c=" + getC(c.level).toString(2) + ", ";
    result += "q=" + getQ(q.level).toString(2) + ", ";
    
    if (milestone0.level > 0) result += "Raise the c exponent[" + milestone0.level + "], ";
    
    // Add custom tertiary equation if needed
    
    return result;
}

var getPublicationMultiplier = (tau) => tau.isZero ? BigNumber.ONE : tau.pow(0.30);
var getPublicationMultiplierFormula = (symbol) => "{symbol}^{0.15}";
var getTau = () => currency.value.pow(0.5);
var get2DGraphValue = () => currency.value.sign * (BigNumber.ONE + currency.value.abs()).log10().toNumber();

// Variable getters
var getC = (level) => Utils.getStepwisePowerSum(level, 2, 10, 0);
var getQ = (level) => BigNumber.from(2).pow(BigNumber.from(level));



init();
