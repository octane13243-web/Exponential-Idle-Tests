import { ExponentialCost, FirstFreeCost, CustomCost } from "./api/Costs";
import { Localization } from "./api/Localization";
import { parseBigNumber, BigNumber } from "./api/BigNumber";
import { theory } from "./api/Theory";
import { Utils } from "./api/Utils";

var id = "my_theory";
var name = "My Custom Theory";
var description = "A custom theory for Exponential Idle.";
var authors = "Your Name";
var version = 1;
var releaseOrder = "1";

requiresGameVersion("1.4.33");

var tauMultiplier = 1;

// =====================
// STATE SCHEMA (the ONLY source of truth)
// =====================
// Currency
var currency;

// Variables (purchasable upgrades)
var c;
var q;

// Milestone state variables (milestones write here, equation builder reads here)
var milestone_0; // ρ ≥ 1e1

// =====================
// EQUATION BUILDER (SINGLE source for both math AND display)
// =====================
// This is the ONLY place that reads state and produces equations
// Both tick() and getPrimaryEquation() call into this logic

// Build the primary equation display from current state
// CRITICAL: This creates a NEW string every time - display is NOT reactive
var buildPrimaryEquationDisplay = () => {
    // User-defined equation with state-based modifications
    return "\\dot{\\rho} = \\frac{q \\log(c)}{3}";
};

var init = () => {
    currency = theory.createCurrency();

    ///////////////////
    // Regular Upgrades (Variables)
    // c
    {
        let getDesc = (level) => "c=" + getC(level).toString(0);
        let getInfo = (level) => "c=" + getC(level).toString(0);
        c = theory.createUpgrade(0, currency, new FirstFreeCost(new ExponentialCost(10, 2)));
        c.getDescription = (amount) => Utils.getMath(getDesc(c.level));
        c.getInfo = (amount) => Utils.getMathTo(getInfo(c.level), getInfo(c.level + amount));
    }

    // q
    {
        let getDesc = (level) => "q=" + getQ(level).toString(0);
        let getInfo = (level) => "q=" + getQ(level).toString(0);
        q = theory.createUpgrade(1, currency, new FirstFreeCost(new ExponentialCost(25, 2)));
        q.getDescription = (amount) => Utils.getMath(getDesc(q.level));
        q.getInfo = (amount) => Utils.getMathTo(getInfo(q.level), getInfo(q.level + amount));
    }

    /////////////////////
    // Permanent Upgrades
    theory.createPublicationUpgrade(0, currency, 1);
    theory.createBuyAllUpgrade(1, currency, 1);
    theory.createAutoBuyerUpgrade(2, currency, 1);

    /////////////////////
    // Milestone Upgrades
    // Milestones ONLY modify state flags - they NEVER touch display directly
    // After state change, they call theory.invalidatePrimaryEquation() to trigger rebuild
    theory.setMilestoneCost(new CustomCost(lvl => {
        const costs = [1];
        return BigNumber.from(costs[Math.min(lvl, costs.length - 1)]);
    }));
    // Milestone 1: Milestone upgrade
    // Effects: none
    // STATE CHANGE -> triggers equation rebuild -> updates display
    {
        milestone_0 = theory.createMilestoneUpgrade(0, 1);
        milestone_0.description = "Milestone upgrade";
        milestone_0.info = "Milestone upgrade";
        milestone_0.boughtOrRefunded = (_) => {
            // CRITICAL: State changed, must rebuild both logic AND display
            theory.invalidatePrimaryEquation();  // Forces getPrimaryEquation() to be called
            theory.invalidateSecondaryEquation();
            theory.invalidateTertiaryEquation();
            updateAvailability();
        };
    }

    // Initial state setup
    updateAvailability();
}

// =====================
// TICK: Equation Builder for MATH (reads state, computes values)
// =====================
var tick = (elapsedTime, multiplier) => {
    let dt = BigNumber.from(elapsedTime * multiplier);
    let bonus = theory.publicationMultiplier;
    
    // Read current state and compute variable values
    let vc = getC(c.level);
    let vq = getQ(q.level);
    
    // Read current state and compute global multipliers
    let globalMult = BigNumber.ONE;
    
    // Assemble equation from state-derived values
    currency.value += bonus * dt * vc * vq * globalMult;
    
    theory.invalidateTertiaryEquation();
}

// Update variable availability based on milestone state
var updateAvailability = () => {
    // No unlock effects
}

var getInternalState = () => {
    return "";
}

var setInternalState = (state) => {
    // Restore internal state from string
}

var postPublish = () => {
    // Reset values after publish
}

// =====================
// DISPLAY FUNCTIONS (call equation builder, return fresh strings)
// =====================

// getPrimaryEquation is called by the engine when we invalidate
// It must return a NEWLY BUILT string based on CURRENT state
var getPrimaryEquation = () => {
    // DO NOT cache this - rebuild every time from state
    return buildPrimaryEquationDisplay();
}

var getSecondaryEquation = () => {
    return theory.latexSymbol + "=\\max\\rho";
}

var getTertiaryEquation = () => {
    return "";
}

// τ is computed SEPARATELY (never in main equation display)
var getPublicationMultiplier = (tau) => tau.isZero ? BigNumber.ONE : tau.pow(0.15);
var getPublicationMultiplierFormula = (symbol) => "{symbol}^{0.15}";
var getTau = () => currency.value.pow(0.1);
var get2DGraphValue = () => currency.value.sign * (BigNumber.ONE + currency.value.abs()).log10().toNumber();

// Variable value getters
var getC = (level) => Utils.getStepwisePowerSum(level, 2, 10, 0);
var getQ = (level) => Utils.getStepwisePowerSum(level, 2, 10, 0);

// No story chapters

init();
