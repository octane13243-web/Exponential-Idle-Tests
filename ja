import { ExponentialCost, FirstFreeCost, CustomCost } from "./api/Costs";
import { Localization } from "./api/Localization";
import { parseBigNumber, BigNumber } from "./api/BigNumber";
import { theory } from "./api/Theory";
import { Utils } from "./api/Utils";

var id = "my_theory";
var name = "My Custom Theory";
var description = "A custom theory for Exponential Idle.";
var authors = "Your Name";
var version = 1;
var releaseOrder = "1";

requiresGameVersion("1.4.33");

var tauMultiplier = 1;

// Currency
var currency;

// Variables
var q1;
var c;

// Internal state


var init = () => {
    currency = theory.createCurrency();

    ///////////////////
    // Regular Upgrades
    // q1
    {
        let getDesc = (level) => "2^level";
        let getInfo = (level) => "2^level";
        q1 = theory.createUpgrade(0, currency, new ExponentialCost(125, 2));
        q1.getDescription = (amount) => Utils.getMath(getDesc(q1.level));
        q1.getInfo = (amount) => Utils.getMathTo(getInfo(q1.level), getInfo(q1.level + amount));
    }

    // c
    {
        let getDesc = (level) => "c=${getC(level)}";
        let getInfo = (level) => "c=${getC(level)}";
        c = theory.createUpgrade(1, currency, new FirstFreeCost(new ExponentialCost(5, 2)));
        c.getDescription = (amount) => Utils.getMath(getDesc(c.level));
        c.getInfo = (amount) => Utils.getMathTo(getInfo(c.level), getInfo(c.level + amount));
    }

    /////////////////////
    // Permanent Upgrades
    theory.createPublicationUpgrade(0, currency, 1e5);
    theory.createBuyAllUpgrade(1, currency, 1e8);
    theory.createAutoBuyerUpgrade(2, currency, 1e12);

    /////////////////////
    // Milestone Upgrades
    theory.setMilestoneCost(new CustomCost(lvl => BigNumber.from(1 + lvl)));
    {
        let milestone0 = theory.createMilestoneUpgrade(0, 1);
        milestone0.description = "Increase whole equation by ^2 (1e10ρ) required";
        milestone0.info = "Increase whole equation by ^2 (1e10ρ) required";
    }
}

var tick = (elapsedTime, multiplier) => {
    let dt = BigNumber.from(elapsedTime * multiplier);
    let bonus = theory.publicationMultiplier;
    
    let vq1 = getQ1(q1.level);
    let vc = getC(c.level);
    
    // Main equation
    currency.value += bonus * dt * vq1 * vc;
    
    theory.invalidateTertiaryEquation();
}

var getInternalState = () => {
    return "";
}

var setInternalState = (state) => {
    // Restore internal state
}

var postPublish = () => {
    // Reset values after publish
}

var getPrimaryEquation = () => {
    return "\dot{\rho} = q*\frac{log(c)}{2}";
}

var getSecondaryEquation = () => {
    return "theory.latexSymbol + "=\\max\\rho"";
}

var getTertiaryEquation = () => {
    return "";
}

var getPublicationMultiplier = (tau) => tau.isZero ? BigNumber.ONE : tau.pow(0.15);
var getPublicationMultiplierFormula = (symbol) => "{symbol}^{0.15}";
var getTau = () => currency.value.pow(1);
var get2DGraphValue = () => currency.value.sign * (BigNumber.ONE + currency.value.abs()).log10().toNumber();

// Variable getters
var getQ1 = (level) => BigNumber.from(2).pow(BigNumber.from(level));
var getC = (level) => Utils.getStepwisePowerSum(level, 2, 10, 0);



init();
